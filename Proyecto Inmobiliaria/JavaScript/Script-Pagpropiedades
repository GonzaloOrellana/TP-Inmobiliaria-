$(document).ready(function() {
    $('.propiedad').hide();
    $('.propiedad').each(function(i) {
        $(this).delay(i * 500).fadeIn(2000);
    });
});

$(document).ready(function() {
        $("#botonventa").click(function() {
        $(".propiedad").show(); 
        $(".propiedad").slice(0, 2).hide();
    });

        $("#botonalquileres").click(function() {
            $(".propiedad").show(); 
            $(".propiedad").slice(2).hide(); 
        });
    });